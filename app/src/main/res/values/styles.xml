<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Body2.Secondary" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ListSubheader">
        <item name="android:layout_marginLeft">@dimen/padding.base</item>
        <item name="android:layout_marginRight">@dimen/padding.base</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2.Secondary</item>
    </style>
</resources>
